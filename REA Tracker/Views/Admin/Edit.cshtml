@using SCR_Tracker.Models;
@using Microsoft.AspNet.Identity;
@model SCR_Tracker.Models.EditUserManagerViewModel
@{
    ViewBag.Title = Resources.strings.qviManageUsersProfile;
}
<h2>@ViewBag.Title.</h2>
<div class="content">
    <div class="container">
        <div class="layout layout-main-right layout-stack-sm">
            <div class="col-md-3 col-sm-4 layout-sidebar">
                <div class="nav-layout-sidebar-skip">
                    <strong>@Resources.strings.qviTabNavigation</strong> / <a href="#settings-content">@Resources.strings.qviSkipToContent</a>
                </div>
                <ul id="myTab" class="nav nav-layout-sidebar nav-stacked">
                    <li @if (ViewBag.tab == null || ViewBag.tab == 0){ @Html.Raw("class='active'") ; }>
                        <a href="#profile-tab" data-toggle="tab"><i class="fa fa-user"></i>&nbsp;&nbsp;@Resources.strings.qviProfileSettings</a>
                    </li>
                    <li @if (ViewBag.tab == 1) { @Html.Raw("class='active'") ; }>
                        <a href="#product-tab" data-toggle="tab"><i class="fa fa-lock"></i>&nbsp;&nbsp;@Resources.strings.qviProductAccessSettings</a>
                    </li>
                    <li @if (ViewBag.tab == 2) { @Html.Raw("class='active'") ; }>
                        <a href="#roles-tab" data-toggle="tab"><i class="fa fa-users"></i>&nbsp;&nbsp;@Resources.strings.qviProductRoles</a>
                    </li>
                    <li @if (ViewBag.tab == 3) { @Html.Raw("class='active'") ; }>
                        <a href="#company-tab" data-toggle="tab"><i class="fa fa-picture-o"></i>&nbsp;&nbsp;@Resources.strings.qviCompanySettings</a>
                    </li>
                    
                </ul>
            </div><!-- /.col -->
            <div class="col-md-9 col-sm-8 layout-main">
                <div id="settings-content" class="tab-content stacked-content">

                    <div class="tab-pane fade @if(ViewBag.tab==null||ViewBag.tab==0){@Html.Raw("in active");}" id="profile-tab">
                        @Html.Partial("_ChangeProfilePartial")
                    </div><!-- /.tab-pane -->
                    <div class="tab-pane fade @if(ViewBag.tab==1){@Html.Raw("in active");}" id="product-tab">
                        @Html.Partial("_ChangeProductsPartial")
                    </div><!-- /.tab-pane -->
                    <div class="tab-pane fade @if(ViewBag.tab==2){@Html.Raw("in active");}" id="roles-tab">
                        @Html.Partial("_ChangeProductRolesPartial")
                    </div><!-- /.tab-pane -->
                    <div class="tab-pane fade @if(ViewBag.tab==3){@Html.Raw("in active");}" id="company-tab">
                        @Html.Partial("_ChangeCompanyPartial")
                    </div><!-- /.tab-pane -->
                  
                </div><!-- /.tab-content -->
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container -->
</div><!-- .content -->
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @*Scripts.Render("~/bundles/mvpready")*@
    @Scripts.Render("~/Scripts/SelectList.js")
    @Scripts.Render("~/Scripts/AdminUserManager.js")
}
